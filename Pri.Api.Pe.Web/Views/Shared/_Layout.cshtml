<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Finder</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pri.Api.Pe.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="app" class="d-flex flex-column" style="min-height: 100vh;">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand">JobFinder</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        </ul>
                        <div v-if="loggedIn" class="user-menu">
                            <button class="user-btn" id="userBtn" v-on:click="toggleDropdown">{{ loggedInUsername }} <span class="arrow-down">&#x25BC;</span></button>
                            <div v-if="dropdownVisible" class="dropdown-menu" id="dropdownMenu">
                                <button v-if="!isEmployer" v-on:click="viewApplicationsHandler">My Applications</button>
                                <button v-on:click="viewMessagesHandler">Messages</button>
                                <button v-on:click="submitLogout()">Logout</button>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div class="body-container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top custom-footer text-muted mt-auto">
            <div class="container">
                &copy; 2024 - <a href="https://www.diegogoethals.be/" target="_blank">Diego Goethals</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="/lib/vue/vue.js"></script>
    <script src="/lib/axios/axios.js"></script>
    <script src="/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
